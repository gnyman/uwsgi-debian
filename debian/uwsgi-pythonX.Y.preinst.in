#!/bin/sh
# preinst script for uwsgi
#
# see: dh_installdeb(1)

set -e

# First version of uwsgi source package which introduced @@uwsgi_binary@@
# binary package.
UWSGI_PYTHON_FIRST_VER="@@uwsgi_python_first_ver@@"

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
    install|upgrade)
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

if [ -e /usr/bin/dpkg-maintscript-helper ] \
   && dpkg-maintscript-helper supports rm_conffile 2>/dev/null; then

  for CONFFILE in \
    /etc/init.d/@@uwsgi_pythonX.Y_binary@@       \
    /etc/default/@@uwsgi_pythonX.Y_binary@@      \
    /etc/logrotate.d/@@uwsgi_pythonX.Y_binary@@  \
    /etc/uwsgi/@@uwsgi_pythonX.Y_binary@@/README \
    ; do
      dpkg-maintscript-helper rm_conffile "$CONFFILE" \
                                          "$UWSGI_PYTHON_FIRST_VER" -- "$@"
  done
fi

exit 0
